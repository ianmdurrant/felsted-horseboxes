<% footer_menu = Spina::Navigation.find_by(name: 'footer_menu') %>
<% footer_services = Spina::Navigation.find_by(name: 'footer_services') %>

<footer class="footer">
  <div class="grid-container">
    <div class="grid-x grid-padding-x grid-padding-y align-middle">
      <div class="cell medium-3 text-left">
        <%= link_to (image_pack_tag 'footer-logo.svg'), spina.root_path, class: 'footer-logo' %>
        <h4>Cleaning services</h4>
        <ul class="footer_services menu vertical">
        <% footer_services.navigation_items.roots.sorted.each do |nav_item| %>
          <li><%= link_to nav_item.menu_title, nav_item.materialized_path %></li>
        <% end %>
        </ul>
      </div>
      <div class="cell medium-6 text-center">
        <ul class="footer_menu menu vertical">
        <% footer_menu.navigation_items.roots.sorted.each do |nav_item| %>
          <li><%= link_to nav_item.menu_title, nav_item.materialized_path %></li>
        <% end %>
        </ul>
      </div>
      <div class="cell medium-3 text-right">
        <h4>Contact us</h4>
        <p><a href="tel:<%= current_account.phone %>">T: <%= current_account.phone %></a><br />
        <a href="mailto:<%= current_account.email %>"><%= current_account.email %></a></p>
        <p>&copy;<%= Time.now.year %> <%= current_account.name %><br /><%= link_to 'Website by Digital Reflow', 'https://www.digitalreflow.co.uk' %></p>
      </div>
    </div>
  </div>

</footer>
